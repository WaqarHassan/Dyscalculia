- content_for :title, 'Log In'
.row
  .col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
    .panel.panel-default.margin-top-20.login-box
      .panel-heading
        %h2.panel-title Log In
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .panel-body
          = f.input :email, autofocus: true
          = f.input :password
          = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .panel-footer
          = submit_button 'Log in', {:feedback_text => "Logging in"}
          .margin-top-10= render "devise/shared/links"
